{
  "manifest_version": 2,

  "name": "Fullstack LinkedIn Connect",
  "description": "Connects you to all Fullstackers in LinkedIn",
  "version": "1.0",

  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "webRequest",
    "activeTab",
    "tabs",
    "https://ajax.googleapis.com/",
    "http://*/*",
    "https://*/*"
  ]
}
